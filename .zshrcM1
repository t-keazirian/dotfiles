# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Update Homebrew paths for Apple Silicon
export PATH="/opt/homebrew/sbin:$PATH"
export PATH="/opt/homebrew/opt/vim/bin:$PATH"
export PATH="/opt/homebrew/opt/python@3.13/bin:$PATH"

# See https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="bira"

# Uncomment one of the following lines to change the auto-update behavior
zstyle ':omz:update' mode reminder  # just remind me to update when it's time

# Uncomment the following line to enable command auto-correction.
ENABLE_CORRECTION="true"

# Uncomment the following line to display red dots whilst waiting for completion.
# COMPLETION_WAITING_DOTS="true"

# Uncomment the following line if you want to disable marking untracked files
# under VCS as dirty.
# DISABLE_UNTRACKED_FILES_DIRTY="true"

# Uncomment the following line if you want to change the command execution time
# stamp shown in the history command output.
# HIST_STAMPS="mm/dd/yyyy"

# Which plugins would you like to load?
plugins=(git zsh-nvm zsh-autosuggestions colorize python pylint vundle zsh-syntax-highlighting web-search history jsontools macos sdk)

source $ZSH/oh-my-zsh.sh

# User configuration

# Enable history
export ERL_AFLAGS="-kernel shell_history enabled"

# Set personal aliases
alias gl='clear && git log --all --decorate --oneline --graph'
alias ga='git add .'
alias gc='git commit -v'
alias gco='git checkout'
alias gsw='git switch'
alias gs='clear && git status'

alias openz="vim ~/.zshrc"
alias openv="vim ~/.vimrc"
alias update="source ~/.zshrc"
alias ll="ls -aGl"
alias git-pull-all='for i in */.git; do (cd $i/..; echo "** pulling ${i} ** branch: $(git rev-parse --abbrev-ref HEAD)"; git pull --recurse-submodules; echo ""; ); done'
alias open-git-config='git config --global --edit'
alias python='/opt/homebrew/opt/python@3.13/bin/python3'

alias brew-maint="~/Scripts/brew-maintenance.sh"

export NVM_DIR="$HOME/.nvm"
[ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion

# Place this after nvm initialization!
autoload -U add-zsh-hook
load-nvmrc() {
  local node_version="$(nvm version)"
  local nvmrc_path="$(nvm_find_nvmrc)"

  if [ -n "$nvmrc_path" ]; then
    local nvmrc_node_version=$(nvm version "$(cat "${nvmrc_path}")")

    if [ "$nvmrc_node_version" = "N/A" ]; then
      nvm install
    elif [ "$nvmrc_node_version" != "$node_version" ]; then
      nvm use
    fi
  elif [ "$node_version" != "$(nvm version default)" ]; then
    echo "Reverting to nvm default version"
    nvm use default
  fi
}
add-zsh-hook chpwd load-nvmrc
load-nvmrc

# Homebrew path for M1 Mac (Apple Silicon)
export PATH="/opt/homebrew/bin:$PATH"

# Enable SDKMAN auto-env (similar to NVM's .nvmrc behavior)
export SDKMAN_DIR=$(brew --prefix sdkman-cli)/libexec
[[ -s "${SDKMAN_DIR}/bin/sdkman-init.sh" ]] && source "${SDKMAN_DIR}/bin/sdkman-init.sh"

# Enable SDKMAN auto-env feature
export SDKMAN_AUTO_ENV=true

# Turn off Spring Boot banners. They are not JSON.
export SPRING_MAIN_BANNER_MODE=off

export PATH="/opt/homebrew/opt/mysql@8.0/bin:$PATH"
